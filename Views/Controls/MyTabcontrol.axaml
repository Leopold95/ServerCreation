<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:ServerCreation.Views.Controls">
    <Design.PreviewWith>
        <controls:MyTabcontrol />
    </Design.PreviewWith>

    <Style Selector="controls|MyTabcontrol">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel Orientation="Horizontal">
                    <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Hidden">
                        <ItemsPresenter/>
                    </ScrollViewer>
                    <ContentPresenter/>
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
